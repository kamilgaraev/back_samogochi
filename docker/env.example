# Copy this file to .env.docker and configure for your environment

# Application
APP_NAME="AntiStress Tamagotchi API"
APP_ENV=production
APP_KEY=base64:CHANGE_ME_TO_32_CHARACTER_STRING
APP_DEBUG=false
APP_URL=http://localhost

# External PostgreSQL 17 (separate server)
DB_CONNECTION=pgsql
DB_HOST=your-postgresql-server.com
DB_PORT=5432
DB_DATABASE=tamagotchi_db
DB_USERNAME=tamagotchi_user
DB_PASSWORD=your_secure_password

# External Redis 8.1 (separate server) 
CACHE_STORE=redis
QUEUE_CONNECTION=redis
REDIS_HOST=your-redis-server.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# JWT Configuration
JWT_SECRET=CHANGE_ME_TO_JWT_SECRET
JWT_TTL=15
JWT_REFRESH_TTL=43200

# Game Configuration
GAME_SITUATION_COOLDOWN_HOURS=2
GAME_MICRO_ACTION_COOLDOWN_MINUTES=30
GAME_DAILY_LOGIN_EXPERIENCE=10
GAME_MAX_ENERGY=200
GAME_ENERGY_REGEN_PER_HOUR=1
GAME_STRESS_THRESHOLD_HIGH=80
GAME_STRESS_THRESHOLD_LOW=20
GAME_EXPERIENCE_PER_LEVEL=100

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
